<h1>こんにちは、<%= current_user.username %>さん</h1>
<p id="notice" class="alert alert-success">
    <%= notice %>
</p>

<h2>内容</h2>
<p><%= @tweet.content %></p>

<%= link_to "編集", edit_tweet_path(@tweet.id), class: "btn edit-btn" %>
<%= link_to "削除", tweet_path(@tweet.id), method: "delete", class: "btn destroy-btn", "data-confirm" => "本当に削除しますか？" %>